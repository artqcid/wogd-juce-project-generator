{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "jsx": "preserve",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "isolatedModules": true,
        "noEmit": true,
        "types": [
            "vite/client"
        ]
    },
    "include": [
        "src/renderer/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}